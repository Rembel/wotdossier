<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ImageBrush x:Key="tooltipBrush" ImageSource="pack://application:,,,/WotDossier.Resources;component/Images/tooltip_bg.jpg" Stretch="Fill" />
    <Style x:Key="office2007SilverToolTip" TargetType="{x:Type ToolTip}">
        <Setter Property="BorderBrush" Value="#454648"></Setter>
        <Setter Property="Foreground" Value="#979899"></Setter>
        <Setter Property="Background" Value="{StaticResource tooltipBrush}"></Setter>
    </Style>
</ResourceDictionary>