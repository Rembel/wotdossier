                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tier" Binding="{Binding Tier}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Icon" Binding="{Binding Icon}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Tank" Binding="{Binding Tank}"></DataGridTextColumn>
                            <DataGridTextColumn Header="TotalXP" Binding="{Binding TotalXP}"></DataGridTextColumn>
                            <DataGridTextColumn Header="MaximumXP" Binding="{Binding MaximumXP}"></DataGridTextColumn>
                            <DataGridTextColumn Header="AverageXP" Binding="{Binding AverageXP}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
